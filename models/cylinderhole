// Main model - rectangular base with through hole and rounded edges
cube_length = 10; // Default value

module main_model() {
    // Base rectangular pad with rounded edges
    difference() {
        // Create base with rounded edges using minkowski
        minkowski() {
            translate([0, 0, cube_length/2 - 0.5])  // Adjusted for minkowski offset
            cube([cube_length - 1, 5, cube_length - 1], center=true);  // Reduced size to account for rounding
            
            sphere(0.5, $fn=32);
        }
        
        // Through pocket (hole) - radius 2mm
        cylinder(h=20, r=2, center=true, $fn=64);
    }
}

// Render the model
main_model();